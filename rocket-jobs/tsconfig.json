{
    "compilerOptions": {
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "allowJs": true,
        "target": "ES2015",
        "outDir": ".build",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "lib": [
            "es2015"
        ],
        "rootDir": "./"
    },
    "exclude": [
        "node_modules"
    ],
    "types": [
        "node",
        "aws-sdk"
    ]
}